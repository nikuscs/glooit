{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ES2020",
    "skipLibCheck": true
  },
  "include": ["src/index.ts", "src/types/**/*"],
  "exclude": ["src/cli/**/*", "tests/**/*", "dist/**/*"]
}