{
  "name": "ai-rules",
  "version": "0.1.0",
  "description": "Reconcile AI agent configurations across platforms",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-rules": "dist/cli/index.js"
  },
  "scripts": {
    "build": "bun run typecheck && bun run lint && bun build src/index.ts --outdir dist --target node",
    "build:cli": "bun build src/cli/index.ts --outdir dist/cli --target node",
    "dev": "bun run src/cli/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src tests",
    "lint:fix": "oxlint src tests --fix",
    "format": "oxlint src tests --fix",
    "check": "bun run typecheck && bun run lint && bun run test:run",
    "prepare": "bun run check && bun run build && bun run build:cli"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "ai",
    "claude",
    "cursor",
    "codex",
    "roo",
    "cline",
    "configuration",
    "rules"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.5.2",
    "@vitest/ui": "^3.2.4",
    "oxlint": "^1.17.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "zod": "^4.1.11"
  }
}
